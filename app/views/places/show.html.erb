
   
<h1><%= @place.name %></h1>

<h3>Posts</h3>


  <% for post in @place.posts %>
    <ul>
    <li><%= "#{post.title}"%></li>
    <li><%= "#{post.posted_on}"%></li>
    <li><%= "#{post.description}"%></li>
    </ul>
  <% end %>


<p>
  <a href="/posts/new?place_id=<%= @place.id %>">New Post</a>
</p>

<p><a href="/places">Back to My Places</a></p>

<p><%= button_to "Delete this place", @place, method: :delete %></p>
  